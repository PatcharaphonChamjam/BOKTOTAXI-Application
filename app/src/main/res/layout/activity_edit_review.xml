<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/colorabove"
    tools:context="com.boktotaxi.boktotaxi.Activity.Edit_reviewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bootstrap_gray_lightest"
        >
        <TextView
            android:id="@+id/Writecarlicense3"
            android:text="Car license"
            android:layout_below="@+id/rating"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/WriteEdtcar3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:background="@color/colorgrayopacity"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/Writecarlicense3"
            android:layout_marginStart="20dp"
            android:focusable="false"
            android:clickable="false"
            />
        <View
            android:layout_below="@+id/WriteEdtcar3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mr.gray"
            ></View>
        <TextView
            android:id="@+id/WriteTextRatting3"
            android:text="Ratting"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/WriteEdtcar3"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"


            />

        <RatingBar
            android:id="@+id/Writeratting3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/WriteTextRatting3"
            android:layout_centerHorizontal="true"
            android:isIndicator="false"
            android:theme="@style/Rattingbar"
            />

        <View
            android:layout_below="@+id/Writeratting3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mr.gray"
            ></View>
        <TextView
            android:id="@+id/WriteTextFrom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From."
            android:textSize="15dp"
            android:layout_below="@+id/Writeratting3"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat"

            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/WriteEdtFrom3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/colorgrayopacity"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/WriteTextFrom3"

            />


        <TextView
            android:id="@+id/WriteTextTo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To."

            android:textSize="15dp"
            android:layout_below="@+id/Writeratting3"
            android:layout_alignStart="@+id/WriteEdtTo3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/WriteEdtTo3"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/colorgrayopacity"
            android:layout_marginTop="10dp"
            android:layout_below="@id/WriteTextTo3"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/WriteTextReview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textSize="15dp"
            android:layout_below="@+id/WriteEdtFrom3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/WriteEdtReview3"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/WriteTextReview3"
            android:layout_marginBottom="20dp"
            android:hint="Write your Review here....."

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="top|left"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userid"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>
</ScrollView>
