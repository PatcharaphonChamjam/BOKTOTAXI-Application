<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layClick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/bootstrap_gray_lighter"
    >

    <RelativeLayout
        android:id="@+id/rav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bglast">

        <ImageView
            android:id="@+id/picUs"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/profile_user" />

        <TextView
            android:id="@+id/textuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/picUs"
            android:text="Username"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateandtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuser"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/picUs"
            android:text="Date and Time"
            android:textSize="15dp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/picUs"
            android:layout_marginTop="5dp"
            android:background="@color/colorgray"></View>

        <TextView
            android:id="@+id/textrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            android:text="Ratting"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/textrating"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:theme="@style/Rattingbar" />


        <TextView
            android:id="@+id/carlicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/Edtcar"
            android:layout_marginLeft="20dp"
            android:text="Car license :"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Edtcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/carlicense"
            android:text="AA 1234" />

        <TextView
            android:id="@+id/Textfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edtcar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="From :"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edtcar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/Textfrom"
            android:text="Ladprao" />

        <TextView
            android:id="@+id/Textto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Textfrom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="To :"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wfrom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/Textto"
            android:text="Rangsit"
            android:textSize="15dp" />

        <View
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/wto" />

        <TextView
            android:id="@+id/textreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Edtreveiw"
            android:layout_below="@+id/space"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Review :"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Edtreveiw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/textreview"
            android:hint="Write your Review here....." />


        <TextView
            android:id="@+id/IDuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="USERID"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/ARGratting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="argratting"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>