<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackg"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    tools:context="com.boktotaxi.boktotaxi.Activity.Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/textRegis"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/regis"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userprofile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_user"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"

            />
    <EditText
        android:id="@+id/regisUsername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
       android:layout_above="@+id/regisEmail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="23dp"
        android:background="@color/colorwhite"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Username"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/regisEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="23dp"
        android:background="@color/colorwhite"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Email"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/regisPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/regisEmail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="23dp"
        android:background="@color/colorwhite"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btnRegissub"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/colorblack"
        android:text="Submit"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorwhite"
        android:textSize="23dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btnregislog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        android:background="@null"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="Login Here"
        android:textColor="@color/colorwhite"
        android:textSize="23dp"
        android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
